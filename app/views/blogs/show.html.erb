<div class="col-sm-8 blog-main">

  <h2><%= @blog.title %></h2>
  <nav aria-label="breadcrumb" role="navigation">
    <ol class="breadcrumb">

      <%= link_to "Home", root_path, class: "breadcrumb-item" %>
      <%= link_to @blog.topic.title, topic_path(@blog.topic), class: "breadcrumb-item" %>
      <li class="breadcrumb-item active"><%= @blog.title %></li>
      <%= link_to fa_icon('pencil-square-o'), edit_blog_path(@blog), class: "ml-auto" if logged_in?(:site_admin)  %>
      <%= link_to fa_icon('trash-o'), @blog, method: :delete, data: { confirm: "Are you sure you want to delete this post?"}, class: "icon-spacer" if logged_in?(:site_admin)  %>
    </ol>

  </nav>

  <p>
    <%= markdown @blog.body %>
  </p>

  <%= render 'comments/comment_form' %>

  <div id="comments" data-blog-id="<%= @blog.id %>">
    <%= render @blog.comments %>
  </div>
</div>
